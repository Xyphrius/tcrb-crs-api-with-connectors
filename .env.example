# TCRB CRS API Environment Configuration
# Copy this file to .env and fill in your values

# Database Configuration
PGHOST=127.0.0.1
PGPORT=5433
PGUSER=postgres
PGPASSWORD=postgres
PGDATABASE=tcrb

# Redis Configuration
REDIS_URL=redis://127.0.0.1:6379

# Application Configuration
PORT=8080
NODE_ENV=development
LOG_LEVEL=info

# Sentry Configuration (optional)
SENTRY_DSN=https://<publicKey>@sentry.io/<project>

# Notion Integration (optional)
NOTION_TOKEN=ntn_xxx
NOTION_CRS_DATABASE_ID=your-database-id

# Production overrides (for docker-compose.prod.yml)
# PGHOST=<managed-postgres-host>
# PGPORT=5432
# REDIS_URL=redis://<managed-redis-host>:6379
